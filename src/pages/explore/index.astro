---
import Base from '@layouts/Base.astro';
import SearchMobile from '../../components/explorerefr/mobile/Explore';
import SearchDesktop from '@components/explorerefr/desktop/Search';
import PageViewCollection from '../../components/home/PageViewCollection';
---

<Base title='Welcome to Astro.'>
  <PageViewCollection page='Explore' client:load />
  <div class='hidden md:block'>
    <div class='h-[200px]'></div>
    <div class='flex justify-center items-center'>
      <h1
        class='font-semibold font-kanit-text mt-2 lg:text-4xl text-[35px] absolute 2xl:text-5xl'
      >
        The journey of 1000 miles starts with 1 roadmap
      </h1>
    </div>
    <SearchDesktop client:idle />
  </div>
  <div class='md:hidden'>
    <div
      class='flex items-center justify-center font-kanit-text text-[21px] flex-col mt-9 sm:text-[31px]'
    >
      <h1>The journey of 1000 steps</h1>
      <h1>starts with 1 roadmap</h1>
    </div>
    <SearchMobile client:idle />
  </div>
</Base>
